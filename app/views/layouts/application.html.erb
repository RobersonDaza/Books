<!DOCTYPE html>
<html>
  <head>
    <title>Books</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:success] %>
    <span data-flash class="success"> <%= flash[:success]%> </span>
    <% elsif flash[:error]%>
    <span data-flash class="error"> <%= flash[:error]%> </span>
    <% end %>
    <%= yield %>
  </body>
</html>
